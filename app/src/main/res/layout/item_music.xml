<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.widget.CompoundButton" />

        <variable
            name="music"
            type="com.jeanpaulo.buscador_itunes.model.Music" />

        <variable
            name="viewmodel"
            type="com.jeanpaulo.buscador_itunes.view_model.SearchViewModel" />
    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_news_banner"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            tools:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="12dp">


            <TextView
                android:id="@+id/txt_music_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingLeft="12dp"
                android:textColor="#333"
                android:textSize="18sp"
                tools:text="Sample news title" />

            <TextView
                android:id="@+id/txt_artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingLeft="12dp"
                android:textColor="#333"
                android:textSize="16sp"
                tools:text="Sample Artist title" />

            <TextView
                android:id="@+id/txt_collection_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingLeft="12dp"
                android:paddingTop="10dp"
                android:textColor="#333"
                android:textSize="16sp"
                tools:text="Sample news title" />

        </LinearLayout>
    </LinearLayout>
</layout>